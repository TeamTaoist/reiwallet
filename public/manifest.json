{
  "manifest_version": 3,
  "name": "REI wallet",
  "short_name": "REI wallet",
  "version": "0.3.0",
  "description": "Track and manage all your CKB assets effortlessly with REI Wallet â€“ your one-stop solution for convenient CKB asset management.",
  "icons": {
    "128": "logoIcon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logoIcon.png"
    }
  },
  "background": {
    "service_worker": "",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/content_script/inject.js",
        "/images/logo.png"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true
    }
  ],
  "content_scripts": [
    {
      "js": [],
      "css": [],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ]
}
