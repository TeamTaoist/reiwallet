{
  "manifest_version": 3,
  "name": "rgbpp-wallet",
  "short_name": "rgbpp",
  "version": "1.0.0",
  "description": "rgbpp-wallet",
  "icons": {
    "128": "logoIcon.png"
  },
  "permissions": ["storage", "activeTab", "scripting","tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logoIcon.png"
    }
  },
  "background": {
    "service_worker": "",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [ "/content_script/inject.js","/images/logo.png" ],
      "matches": ["<all_urls>"],
      "all_frames": true
    }
  ],
  "content_scripts": [
    {
      "js": [],
      "css": [],
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ]
}
